<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd2"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp">

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="@drawable/button3"
            android:hint="Enter Username"
            android:textColorHint="#FFB18D84"
            android:fontFamily="sans-serif-black"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="@drawable/button3"
            android:fontFamily="sans-serif-black"
            android:hint="Enter Password"
            android:textColorHint="#FFB18D84"
            android:inputType="textPassword"
            android:padding="15dp"
            />


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CheckBoxRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:buttonTint="#B31717"
                android:checked="false"
                android:fontFamily="sans-serif-black"
                android:text="Remember Me"
                android:textColor="#DD2C00" />

            <TextView
                android:id="@+id/TextViewForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@android:drawable/ic_lock_idle_lock"
                android:drawablePadding="4dp"
                android:drawableTint="#B31717"
                android:fontFamily="sans-serif-black"
                android:padding="6dp"
                android:text="Forget Password"
                android:textColor="#DD2C00" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttong"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-100dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button47"
            android:shadowColor="@android:color/transparent"
            android:text="Register" />
    </LinearLayout>


</RelativeLayout>