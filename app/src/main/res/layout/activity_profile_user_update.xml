<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C41E0E40"
    tools:context=".ProfileUserUpdate">

    <View
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/deneme9">

    </View>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp">

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:fontFamily="sans-serif-black"
            android:inputType="text"
            android:padding="15dp"
            android:text="Mert Uruc"
            android:textColorHint="#FFB18D84" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:fontFamily="sans-serif-black"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:text="mert@gmail.com"
            android:textColorHint="#FFB18D84">

        </EditText>


        <EditText
            android:id="@+id/editTextBio"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:inputType="text"
            android:alpha="0.7"
            android:text="Bio"
            android:padding="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:maxLines="25"
            android:textColorHint="#FFB18D84"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-100dp"
            android:background="@drawable/element_outline1"
            android:padding="10dp"
            android:text="Update ProfÄ±le"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>